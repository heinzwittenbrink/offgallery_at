<section id="events">
<ul>

{%- for featured in collections.featured| reverse -%}
<li>
{%- if featured.data.eventtype -%}
<strong>{{featured.data.eventtype}}: {{featured.data.date | printDate("dd.MM.yy")}}
</strong>
{% if featured.data.image %}
{{ featured.data.image | renderTeaser() | safe }}
{% endif %}
<h3>{{featured.data.title}}</h3>
<p>{{featured.data.teaser}}</p>
<p><a href="{{featured.url}}">Mehr Informationen</a></p>
{%- endif -%}
{%- if featured.data.specification -%}

<p><strong>Aktuell: {{featured.data.specification}}</strong></p>
<h3>{{featured.data.title}}</h3>
{%- if featured.data.teaser_image -%}
<p>{{ featured.data.teaser_image | renderTeaser() | safe }}</p>
{%- endif -%}
<p>{{featured.data.teaser}}</p>
<p><a href="{{featured.url}}">Blog, {{featured.data.date | printDate("dd.MM.yy")}}</a></p>
{%- endif -%}
</li>
{%- endfor -%}
</ul>

</section>


<section class="summary">
<h2>
{{subtitle}}
</h2>
{{ image | renderPicture | safe }}

<p>{{lead}}</p>
{{ content | safe }}
</section>

